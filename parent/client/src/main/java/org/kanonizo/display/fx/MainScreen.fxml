<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="540" prefWidth="960" xmlns="http://javafx.com/javafx/8.0.121"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.kanonizo.display.fx.KanonizoFrame"
  fx:id="mainLayout">
  <children>
    <BorderPane fx:id="borderPane">
      <!-- Menu Bar -->
      <top>
        <VBox spacing="10">
          <children>
            <MenuBar GridPane.columnIndex="0" GridPane.rowIndex="0">
              <Menu text="File">
                <MenuItem text="New Configuration..."/>
                <MenuItem onAction="#load" text="Open Configuration..."/>
                <MenuItem onAction="#save" text="Save Configuration..."/>
                <MenuItem fx:id="exitButton" onAction="#exit" text="Exit"/>
              </Menu>
            </MenuBar>
            <HBox alignment="CENTER" maxHeight="30" minHeight="30" spacing="10">
              <children>
                <Label prefWidth="100">Project Root:</Label>
                <TextField fx:id="rootFolderTextField" editable="false" prefWidth="650.0"/>
                <Button fx:id="selectRoot" prefWidth="150.0">Select Project Root</Button>
              </children>
              <VBox.margin>
                <Insets/>
              </VBox.margin>
              <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
              </padding>
            </HBox>
          </children>
        </VBox>
      </top>
      <center>
        <GridPane hgap="10" prefWidth="960" vgap="10">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5"/>
          </padding>
          <Label text="Source Folder:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
          <TreeView fx:id="sourceTree" prefWidth="310.0" GridPane.columnIndex="0"
            GridPane.rowIndex="1"/>
          <Label text="Test Folder:" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
          <TreeView fx:id="testTree" prefWidth="310.0" GridPane.columnIndex="1"
            GridPane.rowIndex="1"/>
          <Label text="Libraries:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
          <ListView fx:id="libs" prefWidth="310.0" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
          <columnConstraints>
            <ColumnConstraints/>
            <ColumnConstraints/>
            <ColumnConstraints/>
          </columnConstraints>
          <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
          </rowConstraints>
        </GridPane>
      </center>
      <bottom>
        <GridPane fx:id="bottom">
          <GridPane alignment="CENTER_LEFT" hgap="10" prefWidth="960" vgap="10">
            <padding>
              <Insets bottom="5" left="10" right="10" top="5"/>
            </padding>
            <Label maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Algorithm Choice:"
              GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <ComboBox fx:id="algorithmChoices" maxWidth="150.0" minWidth="150.0" prefWidth="150.0"
              GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <GridPane fx:id="paramLayout" hgap="10" maxWidth="500.0" minHeight="30.0"
              minWidth="500.0" prefWidth="500.0" vgap="10" GridPane.columnIndex="2"
              GridPane.halignment="LEFT" GridPane.rowIndex="0" GridPane.valignment="CENTER">
              <padding>
                <Insets bottom="5" left="10" right="10" top="5"/>
              </padding>

            </GridPane>
            <Button fx:id="goButton" minWidth="50.0" onAction="#go" prefWidth="50.0"
              styleClass="button-green" GridPane.columnIndex="3" GridPane.rowIndex="0"
              GridPane.rowSpan="2">Go
            </Button>
            <Label maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Instrumenter:"
              GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <ComboBox fx:id="instrumenterChoices" maxWidth="150.0" minWidth="150.0"
              prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <GridPane fx:id="instParamLayout" hgap="10" maxWidth="500.0" minHeight="30.0"
              minWidth="500.0" prefWidth="500.0" vgap="10" GridPane.columnIndex="2"
              GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.valignment="CENTER">
              <padding>
                <Insets bottom="5" left="10" right="10" top="5"/>
              </padding>

            </GridPane>
            <columnConstraints>
              <ColumnConstraints/>
              <ColumnConstraints/>
              <ColumnConstraints/>
              <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
              <RowConstraints/>
              <RowConstraints/>
            </rowConstraints>
          </GridPane>
          <columnConstraints>
            <ColumnConstraints/>
          </columnConstraints>
          <rowConstraints>
            <RowConstraints/>
          </rowConstraints>
        </GridPane>
      </bottom>
    </BorderPane>
  </children>
</StackPane>
